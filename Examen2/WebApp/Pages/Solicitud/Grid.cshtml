@page
@model WebApp.Pages.Solicitud.GridModel
@{
}

<style>
    .color-a{
        color: #fff;
    }
      .color-a:hover{
        color: #fff;
    }
</style>

<div class="container">

                    <table id="GridView" class="table table-striped table table-hover table table-bordered">
                        <thead>
                            <tr>
                                <th>Id Cliente</th>
                                <th>Id Servicio</th>
                                <th>Usuario responsable</th>
                                <th>Cantidad</th>
                                <th>Monto</th>
                                 <th>Fecha entrega</th>
                                 <th>Observaciones</th>

                            </tr>
                        </thead>
                        <tbody>
                            @foreach(var item in Model.GridList)
                            { 
                            <tr>
                                <td>@item.IdCliente</td>
                                <td>@item.IdServicio</td>
                                <td>@item.UsuarioEntrega</td>
                                <td>@item.Cantidad</td>
                                 <td>@item.FechaEntrega</td>
                                   <td>@item.Monto</td>
                                  <td>@item.Observaciones</td>
                                <td>
                                    <button type="button" class="btn btn-danger" onclick="GridSolicitud.OnclickEliminar(@item.IdSolicitud)">
                                    <i class='bx bxs-trash'></i>
                                    </button>
                                </td>
                            </tr>                            
                            }
                        </tbody>
                    </table>
                                 <a type="button" class="btn btn-info color-a" asp-page="/Solicitud/Create">
                                    <span style="color: white;font-size: 1.4rem" class="iconify" data-icon="codicon:new-file"></span> Nueva Solicitud</a>
    </div>


</div>
@section  Scripts{ 

    <script>
        var MensajeApp = "@Html.Raw(Model.Mensaje)";
    </script>
    <script defer src="~/App/Solicitud/Grid.js"></script>
}